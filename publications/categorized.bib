journal = {Journal of Heredity},
keywords = {Orcinus orca,ecotypes,genetic structure,microsatellite,mtDNA,populations,subpopulations},
number = {6},
pages = {737--754},
pmid = {23846984},
title = {{Geographic Patterns of Genetic Differentiation among Killer Whales in the Northern North Pacific}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/23846984 https://academic.oup.com/jhered/article-lookup/doi/10.1093/jhered/est037},
