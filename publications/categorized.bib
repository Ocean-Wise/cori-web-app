journal = {Ethology Ecology and Evolution},
number = {3},
pages = {253--268},
title = {{Size-structured abundance relationships between upper-and mid-trophic level predators on temperate rocky reefs}},
volume = {25},
year = {2013}
}
title = {{Humphrey 1995 Morphological staging of larval pacific herring.pdf}}
