month = {oct},
number = {Pt 19},
pages = {3464--3477},
pmid = {28978638},
publisher = {The Company of Biologists Ltd},
title = {{Controlling thoracic pressures in cetaceans during a breath-hold dive: importance of the diaphragm.}},
url = {http://www.ncbi.nlm.nih.gov/pubmed/28978638},
volume = {220},
year = {2017}
}
