@article{Stricker2015,
abstract = {ABSTRACT: Nutritional constraints have been proposed as a contributor to population declines in the endangered Steller sea lion {\textless}i{\textgreater}Eumetopias jubatus{\textless}/i{\textgreater} in some regions of the North Pacific. Isotopic analysis of vibrissae (whiskers) is a potentially useful approach to resolving the nutritional ecology of this species because long-term (up to 8 yr) dietary information is sequentially recorded and metabolically inert once formed. Additionally, vibrissae are grown {\textless}i{\textgreater}in utero{\textless}/i{\textgreater}, potentially offering indirect inference on maternal diet. However, diet reconstruction using isotopic techniques requires {\textless}i{\textgreater}a priori{\textless}/i{\textgreater} knowledge of trophic enrichment factors (TEFs), which can vary relative to diet quality and among animal species. In this study, we provide new TEF estimates for (1) maternal relative to pup vibrissae during both gestation and nursing and (2) adult vibrissae relative to a complex diet. Further, we refine vibrissa-milk TEFs based on an additional 76 animals with an age distribution ranging from 1 to 20 mo. Mother-pup vibrissae TEF values during gestation and nursing were near zero for {\&}delta;{\textless}sup{\textgreater}13{\textless}/sup{\textgreater}C and averaged 0.8 and 1.6{\&}{\#}x2030;, respectively, for {\&}delta;{\textless}sup{\textgreater}15{\textless}/sup{\textgreater}N. In contrast, vibrissa-fish/invertebrate TEFs averaged 3.3 ({\&}{\#}xb1; 0.3 SD) and 3.7{\&}{\#}x2030; ({\&}{\#}xb1;0.3) for lipid-free {\&}delta;{\textless}sup{\textgreater}13{\textless}/sup{\textgreater}C and {\&}delta;{\textless}sup{\textgreater}15{\textless}/sup{\textgreater}N, respectively. Average lipid-free {\&}delta;{\textless}sup{\textgreater}13{\textless}/sup{\textgreater}C and {\&}delta;{\textless}sup{\textgreater}15{\textless}/sup{\textgreater}N vibrissa-milk TEFs were 2.5 ({\&}{\#}xb1;0.9) and 1.8{\&}{\#}x2030; ({\&}{\#}xb1;0.8), respectively, and did not differ among metapopulations. Empirically determined TEFs are critical for accurate retrospective diet modeling, particularly for evaluating the hypothesis of nutritional deficiency contributing to the lack of Steller sea lion population recovery in some regions of Alaska.},
author = {Stricker, C A and Christ, A M and Wunder, M B and Doll, A C and Farley, S D and Rea, L D and Rosen, D A S and Scherer, R D and Tollit, D J},
doi = {10.3354/meps11205},
