journal = {Marine Ecology Progress Series},
keywords = {diet identification,fatty acids},
pages = {245--263},
title = {{Evaluating quantitative fatty acid signature analysis (QFASA) using harbour seals Phoca vitulina richardsi in captive feeding studies}},
volume = {360},
year = {2008}
}
