keywords = {Ecological specialisation,Elasmobranch predation,Foraging strategy,Orcinus orca},
number = {3},
pages = {213--224},
title = {{Shark predation and tooth wear in a population of northeastern pacific killer whales}},
volume = {11},
year = {2011}
}
